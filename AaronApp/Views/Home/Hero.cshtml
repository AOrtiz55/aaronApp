@model Superhero
@{
    ViewData["Title"] = "Home Page";
}
<div class="text-center">
    <h1 class="display-4">We Are Gathering a List of Superheros and Need Your Help! </h1>
</div>
<form>
    <div class="form-group" style="margin-top: 60px;">
        <label for="heroInput" style="font-size:27px;">Your Superhero Choice!</label>
        <input style ="border-color:black;"type="text" class="form-control" id="heroInput"placeholder="Enter superhero">
        <small id="heroInput" class="form-text text-muted">supervillians can not hack this site!</small>
    </div>
 
    <button type="submit" class="btn btn-primary">Submit</button>
</form>

<table class="table-bordered" style="width: 500px !important; margin-top: 100px; border-width: thick; border-color: black!important">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Superhero's On Call</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <th scope="row">1</th>
            <td>Green Lantern</td>
       
        </tr>

    </tbody>
</table>
